    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "jasmine": "^2.9.0",
    "jasmine-spec-reporter": "^4.2.1",
    "nyc": "^11.4.1",
    "watch": "^1.0.2"
  }
